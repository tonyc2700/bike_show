<h3>Post a Comment</h3>

<%= form_for [ @bike, @comment ] do |f| %>
  <p>
    <%= f.label :author_name, "Your name" %><br/>
    <%= f.text_field :author_name %>
  </p>
  <p>
    <%= f.label :body, "Comment" %><br/>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>